@model List<Book>  

@*Controllerdan liste olarak gonderdıgımız Book ve ınclude ıle bırlestırdıgımız tablolardan verıyı cekmek ıstedıklerımızı buradan bu sekılde foreach ıle modelde donuyoruz*@
@{
    ViewData["Title"] = "BookList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BookList</h1>



<h3 class="text-center">BookTypeList</h3>
<a asp-controller="BookType" asp-action="Create" class="btn btn-primary" style="float:right">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Aksiyon</th>
        </tr>
    </thead>
    <tbody>
       @* Book tablosuna bagladıgımız Author ve BookType ile alakalı olan verileri yukarıda @Model<List>Book ile view sayfamıza gönderdik. Burada da Book, Author ve BookType verilerini foreach ile dönüyoruz*@
        @foreach (var book in Model)
        {
     <th>@book.Name</th>
     <th>@book.PageCount</th>
     <th>@book.Author.FirstName</th>
     <th>@book.Author.LastName</th>
     <th>@book.BookType.BookName</th>     

        <td>
            <a href="/BookType/Update/@book.Id" class="big-icon"><i class="bi bi-pencil-square"></i></a>
            <a href="/BookType/Delete/@book.Id" class="big-icon margin-icon"><i class="bi bi-x-circle-fill"></i></a>
        </td>


        }

    </tbody>



</table>

