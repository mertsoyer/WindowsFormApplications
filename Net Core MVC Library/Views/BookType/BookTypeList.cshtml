@model List<BookType>
@{
    ViewData["Title"] = "BookTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">BookTypeList</h3>
<a asp-controller="BookType" asp-action="Create" class="btn btn-primary" style="float:right">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Aksiyon</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bookType in Model)
        {
        <th>@bookType.BookName</th>

        <td>
            <a href="/BookType/Update/@bookType.Id" class="big-icon"><i class="bi bi-pencil-square"></i></a>
            <a href="/BookType/Delete/@bookType.Id" class="big-icon margin-icon"><i class="bi bi-x-circle-fill"></i></a>
        </td>


        }

    </tbody>



</table>

